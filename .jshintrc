{
    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options
    // https://make.wordpress.org/core/handbook/best-practices/coding-standards/javascript/

    "boss": true,
    "curly": true,
    "eqeqeq": true,
    "es3": true,
    "expr": true,
    "immed": true,
    "noarg": true,
    "nonbsp": true,
    "onevar": true,
    "quotmark": "single",
    "trailing": true,
    "undef": true,
    "unused": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esnext": true,
    "eqnull": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments

    "browser": true,
    "jquery": true,
    "node": true,

    "globals": {
        "Modernizr": true
    }

}